@model Application.DTOs.RoomDto
@using Domain.Enums
<h1>Edit Room</h1>

<form asp-action="Update" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsFree"></label>
        <select asp-for="IsFree" class="form-control">
            <option value="true" selected="selected">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="IsFree" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId"></label>
        <select asp-for="RoomTypeId" asp-items="@(new SelectList(Model.RoomTypes, "Id", "Type"))" class="form-control">
            <option value="">Select Room Type</option>
        </select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TypeOfService"></label>
        <select asp-for="TypeOfService" class="form-control">
            <option value="">Select Type Of Service</option>
            @foreach (var method in Enum.GetValues(typeof(TypeOfService)))
            {
                <option value="@method">@method</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
