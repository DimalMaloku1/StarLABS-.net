<form asp-action="GetRoomsByFreeStatus" asp-controller="Room" method="get">
    <div class="form-group">
        <label for="freeStatus">Select Free Status:</label>
        <select class="form-control" id="freeStatus" name="isFree">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<form asp-action="GetFreeRooms" asp-controller="Room" method="get">
    <button type="submit" class="btn btn-primary">Get Free Rooms</button>
</form>

<form asp-action="GetOccupiedRooms" asp-controller="Room" method="get">
    <button type="submit" class="btn btn-primary">Get Occupied Rooms</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Is Free</th>
            <th>Room Type</th>
            <th>Price per Night</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@(room.IsFree ? "Yes" : "No")</td>
                <td>@room.Type</td>
                <td>@room.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@room.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this room?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
