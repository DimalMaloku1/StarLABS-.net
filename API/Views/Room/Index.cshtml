@model IEnumerable<Application.DTOs.RoomDto>
<div class="d-flex justify-content-center wrapper">

    <div style="width:100%">
<div class="crudIndex">
    <div class="buttons-title">
        <h3>Rooms</h3>
        <a asp-controller="Room" asp-action="Create" class="btn btn-success"><span class="material-icons">add_circle</span>  Add New Room</a>
    </div>
    <div class="filters">
        <form asp-action="GetRoomsByFreeStatus" asp-controller="Room" method="get">
                <label for="freeStatus">Select Free Status:</label>
                <div class="input">
                <select class="form-control" id="freeStatus" name="isFree">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <button type="submit" class="btn btn-primary"><span class="material-icons">search</span></button>
                </div>
        </form>

        <div class="right-side">
        <form asp-action="GetFreeRooms" asp-controller="Room" method="get">
            <button type="submit" class="btn btn-primary">Get Free Rooms</button>
        </form>

        <form asp-action="GetOccupiedRooms" asp-controller="Room" method="get">
            <button type="submit" class="btn btn-primary">Get Occupied Rooms</button>
        </form>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Room Type</th>
                <th>Price per Night</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.RoomNumber)
                    </td>
                    
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-controller="Room" asp-action="Edit" asp-route-id="@item.Id"><span class="material-icons">edit</span></a>
                        <a class="btn btn-outline-info" asp-controller="Room" asp-action="Details" asp-route-id="@item.Id"><span class="material-icons">info</span></a>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this room?');">
                            <button type="submit" class="btn btn-danger"><span class="material-icons">delete</span></button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>
</div>
</div>
