@model IEnumerable<Application.DTOs.RoomDto>

<h1>Rooms</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create Room</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Is Free</th>
            <th>Room Type</th>
            <th>Type Of Service</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@(room.IsFree ? "Yes" : "No")</td>
                <td>@room.Type</td>
                <td>@room.TypeOfService</td>
                <td>
                    <a asp-action="Details" asp-route-id="@room.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@room.Id">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@room.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this room?');">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
