@model Application.DTOs.RoomDto

<h1>Room Details</h1>

<table class="table">
    <tr>
        <th>Room Number</th>
        <td>@Model.RoomNumber</td>
    </tr>
    <tr>
        <th>Is Free</th>
        <td>@(Model.IsFree ? "Yes" : "No")</td>
    </tr>
    <tr>
        <th>Room Type</th>
        <td>@Model.Type</td>
    </tr>
    <tr>
        <th>Room Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Room Capacity</th>
        <td>@Model.Capacity</td>
    </tr>
    <tr>
        <th>Price per night</th>
        <td>@Model.Price</td>
    </tr>

</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<button onclick="confirmDelete('@Model.Id')" class="btn btn-danger">Delete</button>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this room?")) {
                window.location.href = "/Room/Delete/" + id;
            }
        }
    </script>
}
