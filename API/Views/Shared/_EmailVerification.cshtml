@model Application.DTOs.AccountDTOs.VerifyAccountDto


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
</head>
<body style="font-family: Arial, sans-serif; margin: 0; padding: 0;">
<table align="center" border="0" cellpadding="0" cellspacing="0" width="600">
    <tr>
        <td align="center" bgcolor="#ffffff" style="padding: 40px 0 30px 0;">
            <h1 style="margin: 0; font-size: 24px;">Verify your email address</h1>
        </td>
    </tr>
    <tr>
        <td bgcolor="#ffffff" style="padding: 20px 30px;">
            <p style="margin: 0; font-size: 16px;">Hello <strong>@Model.Username</strong>,</p>
            <p style="margin: 20px 0 30px 0; font-size: 16px;">Please click the following link to verify your email address:</p>
            <p style="margin: 20px 0; font-size: 16px;"><a href="@Model.VerificationToken" style="background-color: #007bff; color: #ffffff; text-decoration: none; padding: 10px 20px; border-radius: 5px;">Verify Email Address</a></p>
        </td>
    </tr>
    <tr>
        <td bgcolor="#f4f4f4" style="padding: 30px;">
            <p style="margin: 0; font-size: 14px;">If you did not request this verification, you can ignore this email.</p>
        </td>
    </tr>
</table>
</body>
</html>
