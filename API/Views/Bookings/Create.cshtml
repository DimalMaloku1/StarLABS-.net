@model BookingDto
@using Application.DTOs
@using System.Security.Claims
@{
    ViewData["Title"] = "Add a new Booking";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new Booking</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                @* TODO: more methods needed by roomservice to provide better information about rooms available based on the typeofservice *@
                <form asp-controller="Bookings" asp-action="Create">
                    <div class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CheckInDate" class="control-label"></label>
                        <input asp-for="CheckInDate" class="form-control" />
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CheckOutDate" class="control-label"></label>
                        <input asp-for="CheckOutDate" class="form-control" />
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomId"></label>
                        <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-control">
                            <option value="">Select Room</option>
                        </select>
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomTypeId"></label>
                        <select asp-for="RoomTypeId" asp-items="ViewBag.Roomtypes" class="form-control">
                            <option value="">Select Room Type</option>
                        </select>
                        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="UserId" name="userId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />

                    <div class="form-group d-flex justify-content-between mt-2">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

