@model PaymentDto
@using Application.DTOs
@using Domain.Enums

<h2>Delete Payment</h2>

<div>
    <h4>Are you sure you want to delete this payment?</h4>
    <div>
        <h3>Payment Details</h3>
        <dl class="row">
            <dt class="col-sm-2">Payment ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Is Paid</dt>
            <dd class="col-sm-10">@Model.IsPaid</dd>

            <dt class="col-sm-2">Payment Method</dt>
            <dd class="col-sm-10">@Model.PaymentMethod</dd> 

            <dt class="col-sm-2">Bill ID</dt>
            <dd class="col-sm-10">@Model.BillId</dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post"> 
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Cancel</a> 
    </form>
</div>
