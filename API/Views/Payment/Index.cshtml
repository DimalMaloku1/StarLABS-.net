@model IEnumerable<Application.DTOs.PaymentDto>



<div class="crudIndex">
    <div class="buttons-title">
        <h3>Positions</h3>
        <a asp-controller="Payment" asp-action="Create" class="btn btn-success"><span class="material-icons">add_circle</span>  Create New Payment</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Payment ID</th>
                <th>Payment Method</th>
                <th>Bill ID</th>
                <th>Total Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.BillId)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-controller="Payment" asp-action="Edit" asp-route-id="@item.Id"><span class="material-icons">edit</span></a>
                        <a class="btn btn-outline-info" asp-controller="Payment" asp-action="Details" asp-route-id="@item.Id"><span class="material-icons">info</span></a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this payment?')">
                                <span class="material-icons">delete</span>
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>