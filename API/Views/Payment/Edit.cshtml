@model PaymentDto
@using Application.DTOs

<h2>Edit Payment</h2>

<form asp-action="UpdatePayment" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="IsPaid"></label>
        <input asp-for="IsPaid" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethodDto"></label>
        <input asp-for="PaymentMethodDto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BillId"></label>
        <input asp-for="BillId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
