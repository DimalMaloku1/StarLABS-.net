@model Application.DTOs.PaymentDto
@using Domain.Enums
@using Microsoft.AspNetCore.Mvc.Rendering

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Comfortaa">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,649;1,649&display=swap" rel="stylesheet">



<style>
    body {
        font-family: sf pro text,-apple-system,BlinkMacSystemFont, Roboto,segoe ui,Helvetica,Arial,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol;
        font-size: 15px;
        line-height: 1.43;
        color: #1c1d1f;
        background-color: #fff;
        margin: 0;
    }

    .icon {
        width: 40px;
    }

    .bigI {
        width: 300px;
    }

    .blueBtn {
        background-color: #14274A;
        border-color: transparent;
        padding: 4%;
        width: inherit;
        color: #fff;
        font-weight: 700;
        font-size: 16px;
        margin-top: 20px;
    }

    .container2 {
        display: grid;
        grid-template-columns: 57% 40% !important;
        padding: 5%;
        gap: 3%;
    }

        .container2 > div {
            display: flex;
            flex-direction: column;
        }

    #payNow > p {
        font-size: 13px;
        line-height: 19px;
        word-spacing: 2px;
        margin-bottom: 8px;
    }

    #payNow a {
        margin-left: 3px;
        text-decoration: none;
        font-weight: 700;
    }

    h3 {
        margin-bottom: 0;
    }

    .nothing {
        height: 1px;
        background-color: black;
    }

    .shBorder {
        padding: 5%;
        border: 1px solid #f7f9fa;
        box-shadow: 0 0 1px 1px rgb(28 29 31 / 10%), 0 3px 1px 0 rgb(28 29 31 / 10%);
        box-sizing: border-box;
        margin-bottom: 10px;
        padding: 24px 24px 0;
        top: 8em;
        padding-bottom: 50px;
    }

    .hBorder {
        padding: 5%;
        border: 1px solid #f7f9fa;
        box-shadow: 0 0 1px 1px rgb(28 29 31 / 10%), 0 3px 1px 0 rgb(28 29 31 / 10%);
        box-sizing: border-box;
        margin-bottom: 10px;
        padding: 24px 24px 0;
        top: 8em;
        padding-bottom: 5px;
    }

    .inputBox {
        display: flex;
        flex-direction: column;
        border: 1px solid black;
        margin: 20px 5px;
        padding: 10px;
    }

        .inputBox > input, .inputBox > select {
            border: transparent;
            width: inherit;
        }

        .inputBox > label {
            font-size: 12px;
            margin-left: .4em;
        }

    .sideBy1 {
        display: grid;
        grid-template-columns: 49% 49%;
        gap: 2%;
    }

    .sideBy2 {
        display: grid;
        grid-template-columns: 33% 33% 34%;
    }

    .bdMerge1 {
        margin-right: 0;
    }

    .bdMerge2 {
        margin-left: 0;
    }

    .priced {
        display: flex;
        flex-direction: row;
        font-size: 18px;
    }

    .priced1 {
        flex-grow: 2;
    }

    #buyThis > div > img {
        width: 70%;
        margin: auto;
    }

    #buyThis > div {
        display: grid;
        grid-template-columns: 10% 82% 8%;
    }

        #buyThis > div > p, #buyThis > div > h3 {
            overflow: hidden;
            margin-top: 0;
            height: 40px;
            font-size: 14px;
            font-weight: 700;
        }

    .secure {
        float: right;
        max-width: 100px;
        opacity: 70%;
        font-size: 13px;
    }

        .secure > p {
            float: right;
            width: 70%;
        }

        .secure > img {
            max-width: 25%;
            margin-top: 12%;
        }

    #payMethod {
        display: flex;
        flex-direction: column;
        gap: 20px;
        color: black;
        margin-bottom: 30px;
    }

        #payMethod > label {
            font-weight: 700;
        }

    .nothing {
        margin-top: 5px;
    }

    #payNow > h3 {
        margin-top: 5px;
    }

    select {
        background-color: #f7f9fa;
    }

    #Payment:hover {
        cursor: pointer;
    }

    .form-check {
        margin-bottom: 10px;
    }

    .form-check-label {
        font-weight: normal;
    }

    .form-check-input[type="radio"] {
        margin-right: 5px;
    }

    .payment-label {
        font-weight: normal;
        color: #333;
    }

        .payment-label:hover {
            cursor: pointer;
        }

    .form-check-input:checked + .payment-label {
        font-weight: bold;
        color: #007bff;
    }

    .form-check-input[type="radio"] {
        position: absolute;
        opacity: 0;
        cursor: pointer;
    }

    .payment-method input[type="radio"] {
        display: none;
    }

    .payment-method label {
        position: relative;
        display: inline-block;
        cursor: pointer;
        padding-left: 30px;
        margin-right: 15px;
    }

        .payment-method label::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            border: 2px solid #ccc;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

    .payment-method input[type="radio"]:checked + label::before {
        background-color: #007bff;
        border-color: #007bff;
    }

    .payment-method label::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        transform: translateY(-50%) scale(0);
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background-color: #007bff;
        opacity: 1;
        visibility: visible;
        transition: transform 0.3s ease, opacity 0.3s ease, visibility 0.3s;
    }

    .payment-method input[type="radio"]:checked + label::after {
        transform: translateY(-50%) scale(2);
        opacity: 0;
        visibility: hidden;
    }

    .playfair-display-text {
        font-family: 'Playfair Display', serif;
    }

    .less-bold-text {
        font-weight: 600; /* Adjust the value as needed */
    }

   
    .playfair-display-custom {
        font-family: "Playfair Display", serif;
        font-optical-sizing: auto;
        font-weight: 649;
        font-style: normal;
    }

    .eb-garamond-custom {
        font-family: "EB Garamond", serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
    }

    .comfortaa-custom {
        font-family: "Comfortaa", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
    }

</style>
<form id="paymentForm" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container2">
        <div id="pay">
            <h1 class="playfair-display-custom" style="margin-bottom: 20px;">Checkout</h1>
            <div class="form-group">
                <div>
                    <p id="selectMethod" style="font-family: 'Comfortaa', sans-serif; font-size: 24px; font-weight: bold; color: #333; margin-bottom: 20px; margin-top: 20px; cursor: pointer; animation: bounce 0.5s;">Select any method</p>
                    <div class="payment-methods" style="margin-left: 20px; display: none;">
                        @foreach (var method in Enum.GetValues(typeof(PaymentMethod)))
                        {
                            <div class="payment-method" style="margin-bottom: 10px; display: none;">
                                <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="@method" id="@($"PaymentMethod_{method}")" data-val="true" data-val-required="">
                                <label class="form-check-label payment-label" for="@($"PaymentMethod_{method}")">
                                    <span style="font-size: 16px; font-style: italic;">Pay with</span>
                                    @if ((PaymentMethod)method == PaymentMethod.Stripe)
                                    {
                                        <img class="icon" src="https://upload.wikimedia.org/wikipedia/commons/b/ba/Stripe_Logo%2C_revised_2016.svg" alt="Stripe" style="width: 55px;">
                                    }
                                    else if ((PaymentMethod)method == PaymentMethod.PayPal)
                                    {
                                        <img class="icon" src="https://www.svgrepo.com/show/328122/paypal.svg" alt="PayPal" style="width: 55px;">
                                    }
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="hBorder">
                <form>
                    <p>After selecting your preferred payment method, you'll proceed securely with your transaction.</p>
                </form>
                <div class="secure">
                    <img class="icon" src="https://www.svgrepo.com/show/184189/lock.svg">
                    <p>Secure Connection</p>
                </div>
            </div>
        </div>
        <input hidden type="text" asp-for="BillId" class="form-control" readonly />
        <div id="payNow" class="shBorder">
            <h2 style="font-family: 'Sofia', sans-serif;">Payment Summary</h2>
            <div class="priced">
                <span class="priced1">Total Price:</span>
            </div>
            <input type="text" asp-for="TotalAmount" class="form-control less-bold-text" readonly style="margin-bottom: 10px;" />
            <p><em style="font-style: italic; font-size: 16px;">Please note:</em> <strong style="font-family: 'Audiowide', sans-serif;">Internstellar</strong>, as a responsible entity, is obligated by law to diligently collect transaction taxes as required by the jurisdictions involved in your purchase.</p>
            <p><strong>By completing your purchase, you agree to our <a href="#">Terms of Service</a>.</strong></p>
            <button type="submit" id="Payment" class="blueBtn"><i class="fas fa-check"></i>Proceed to Payment</button>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).ready(function () {
        $('#BillId').change(function () {
            var totalAmount = $('option:selected', this).data('total-amount');
            var username = $('option:selected', this).data('username');
            $('#TotalAmount').val(totalAmount);
            $('#Username').val(username);
        });
    });
    $(document).ready(function () {
        $("#selectMethod").click(function () {
            $(".payment-methods").fadeIn(500, function () {
                $(".payment-method").each(function (index) {
                    $(this).delay(300 * index).fadeIn(500);
                });
                $("#selectMethod").off("click");
                $("#selectMethod").css("cursor", "default");
            });
        });
    });

</script>