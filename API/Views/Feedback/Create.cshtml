<h2>Give Feedback!</h2>

<form asp-action="Create" class="d-flex flex-column gap-3 ">
    <div class="form-group input-feedback">
        <label asp-for="Comment">Comment</label>
                <textarea asp-for="Comment" class="form-control" ></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group rating-star">
        <label>Rating</label>
        @for (int i = 1; i <= 5; i++)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Rating" value="@i" id="rating@i">
                <label class="form-check-label" for="rating@i">
                    @i
                </label>
            </div>
        }
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
