@using Application.DTOs
@model IEnumerable<FeedbackDto>

@{
    ViewData["Title"] = "Feedback List";
    var averageRating = ViewBag.AverageRating; // Retrieve the average rating from ViewBag
}

<h2>Feedback List</h2>

<p>Average Rating: @averageRating</p>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Comment</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.User.firstName</td>
                <td>@feedback.Comment</td>
                <td>@feedback.Rating</td>
                <td>
                    <a asp-action="Details" asp-route-id="@feedback.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@feedback.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@feedback.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
