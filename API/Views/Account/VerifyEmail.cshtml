@model Application.DTOs.AccountDTOs.UserDto

<div class="container">
    <div class="text-center">
        <h1>Internstellar Hotel</h1>
        <p> Hi @Model.UserName,<br/>
            We're happy you've signed up to our website. To start using our features, please confirm your email address
        </p>
        <form method="post" asp-action="SendVerification">
            <input type="hidden" name="email" value="@Model.Email" />
            <input style="background-color: #5bc0de; color: #fff;" class="btn btn-primary btn-lg" type="submit" value="Send Verification Email" />
            
        </form>
    </div>
</div>