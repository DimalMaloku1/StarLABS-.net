    @model BillDto
    @using Application.DTOs
    @using Domain.Enums

<h2>Update your bill</h2>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">


        <select asp-for="BookingId" class="form-control">

            <option value="">Select Booking Id</option>

            @foreach (var booking in ViewBag.Bookings)
            {
                <option value="@booking.Id">@booking.Id</option>
            }
        </select>

        <span asp-validation-for="BookingId" class="text-danger"></span>
    </div>

    <div class="input-group mt-3 py-4">
        <div class="input-group-text"> $ </div>
        <div class="form-floating">
            <input placeholder="Total Amount" class="form-control" asp-for="TotalAmount">
            <label class="form-label" for="email"> Amount</label>
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
        <button class="btn btn-primary">+</button>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
