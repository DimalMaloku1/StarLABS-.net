@model IEnumerable<Application.DTOs.BillDto>


<div class="d-flex justify-content-center wrapper">
<div class="crudIndex">
    <div class="buttons-title">
        <h3>All Bills</h3>
        <a asp-controller="Bill" asp-action="Create" class="btn btn-success"><span class="material-icons">add_circle</span>  Create New Bill</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Bill ID</th>
                <th>Username</th>
                <th>Booking ID</th>
                <th>Total Amount</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.BookingId)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id"><span class="material-icons">edit</span></a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><span class="material-icons">info</span></a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');"><span class="material-icons">delete</span></button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>

                        </div>