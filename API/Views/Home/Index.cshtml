@model YourProject.ViewModels.HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="main-wrapper">

<div>

        <h2 id="AboutUs">About Us</h2>
        <div class="about-container">
            <img src="/images/logo.png" />
            <div class="data">
                <h4>Interstellar Hotel</h4>
                <p> "Sunset Cove Hotel, nestled between the whispering palms of Serenity Island and the azure embrace of Mermaid Bay, just a seashell's throw away from the fabled Fountain of Eternal Chill."</p>
                <h6>
                    Welcome to the Sunset Cove Hotel, where time drifts lazily along with the gentle sea breeze, and the sun dances upon the waves like a troupe of mischievous dolphins.
                    Our hotel stands as a beacon of relaxation and folly amidst the shimmering sands and coconut-scented dreams of Serenity Island. As you step into our lobby, you'll
                    be greeted by the cheerful chatter of seagulls and the soothing melody of the ukulele-playing concierge, who is known to answer even the most perplexing questions
                    with a wink and a smile.
                </h6>
            </div>
        </div>

</div>

<div>
    <h2 id="location">Location</h2>
    <div class="location-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3982.6895666106743!2d101.79197917572556!3d3.4255677513897336!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31cc13fc801985a1%3A0xca122e3bebda0fe1!2sFirst%20World%20Hotel!5e0!3m2!1sen!2s!4v1709074499079!5m2!1sen!2s" width="100%" height="350px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>

<div>
    <h2 id="roomType">Room Type</h2>
        <div class="roomType-container">
            @foreach (var roomType in Model.RoomTypes)
            {
                <div class="card">
                    <img src="/images/@(roomType.Type).jpg" alt="@roomType.Type" />
                    <div class="data">
                        <div class="title">
                            <h4>@roomType.Type</h4>
                            <span class="material-icons booking-btn">bookmark</span>
                        </div>
                        <hr />
                        <p>@roomType.Description</p>
                        <div class="bottom">
                            <hr />
                            <div class="price">
                                <p>Price: @roomType.Price$</p>
                                <p><a href="/Bookings/Create">Book Room</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>

<div class="rated-feedback">
    
    <div class="container-fluid d-flex justify-content-between">
            <h2 id="feedback">Top Rated Feedbacks</h2>
            <div class="average-rating d-flex gap-2">
                <h3 id="average-rating">Average Rating: </h3>
                <p class="h3">@(Model.AverageRating)/5</p>
            </div>
    </div>




    <div class="rated-feedback-grid">
     @foreach (var feedback in Model.Feedbacks)
     {
            <div class="card">
                <h6>@(feedback.Rating)/5</h6>
                <p>
                    @feedback.Comment
                </p>
                
                <div class="bottom">
                    <hr />
                    <div class="user-data">
                        <span class="material-icons comment-user">person</span>
                        <div class="user-name">
                            <h5>@feedback.User</h5>
                            <p>Guest</p>
                        </div>
                    </div>
                </div>
            </div>

     }
        </div>
</div>
</div>


<script src="/_framework/aspnetcore-browser-refresh.js"></script>
