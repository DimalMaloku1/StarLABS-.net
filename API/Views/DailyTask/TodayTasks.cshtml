@model IEnumerable<Application.DTOs.DailyTaskDto>

<div class="container">
    <h1>Daily Tasks for Today</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Task Name</th>
                <th>Staff Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.StaffFullName</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>@item.Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="action-links">
        <a asp-action="Index" class="btn btn-primary">Back to All Daily Tasks</a>
        <a asp-action="Create" class="btn btn-primary">Create New Task</a>
    </div>
</div>
