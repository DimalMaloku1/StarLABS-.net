@model IEnumerable<Application.DTOs.DailyTaskDto>

<div class="crudIndex">
    <h1>My Daily Tasks</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Task Name</th>
                <th>Staff Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Name</td>
                    <td>@task.StaffFullName</td>
                    <td>@task.Description</td>
                    <td>@task.Status</td>
                    <td>@task.Date.ToShortDateString()</td>
                    <td>
                        <a asp-controller="DailyTask" asp-action="EditTask" asp-route-id="@task.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
