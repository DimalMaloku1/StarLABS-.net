@model IEnumerable<Application.DTOs.BookingDto>
@Html.Partial("_Navbar")
<div class="relative mx-auto overflow-x-auto wrapper">
    <div class="card w-2/3 mx-auto mt-12">
        <div class="card-body">
            <table class="datatable table table-bordered table-striped table-hover py-4">
                <thead class="table-dark ">
                <th> Booking Id </th>
                <th> User Email</th>
                <th> Check-In and Check-Out Dates</th>
                <th> Room Number</th>
                <th> Created At</th>
                <th> Actions</th>
                </thead>
                <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td> @booking.Id </td>
                        <td> @booking.User.Email</td>
                        <td> @booking.CheckInDate - @booking.CheckOutDate</td>
            
                        <td>@booking.Room.RoomNumber</td>
                        <td> @booking.CreatedAt </td>
                        <td class="text-center ">
                            <a class=" btn btn-info" asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.Id">Details</a>
                            <a class=" btn btn-primary" asp-controller="Bookings" asp-action="Edit" asp-route-id="@booking.Id">Edit</a>
                            <form class="" asp-action="Delete" asp-controller="Bookings" asp-route-id="@booking.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="mt-4">
            @await Html.PartialAsync("_BookingInformationChart", ViewData["bookingchart"])
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="../wwwroot/js/site.js"></script>
</div>