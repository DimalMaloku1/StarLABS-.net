@model IEnumerable<Application.DTOs.PaymentDto>
@Html.Partial("_Navbar")
<div class="relative mx-auto overflow-x-auto">
    <div class="card w-2/3 mx-auto mt-12">
        <div class="card-body">
            <table class="datatable table table-bordered table-striped table-hover py-4">
                <thead class="table-dark ">
                <th> Payment Id </th>
                <th> Payment Method</th>
                <th>Bill Id</th>
                <th> Total Amount</th>
                <th> Username</th>
                <th> Created At</th>
                <th> Actions</th>
                </thead>
                <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td> @payment.Id </td>
                        <td> @payment.PaymentMethod</td>
                        <td> @payment.BillId</td>
                        <td> @payment.TotalAmount</td>
                        <td> @payment.Username</td>
                        <td> @payment.CreatedAt</td>
                        <td class="text-center ">
                            <a class=" btn btn-info" asp-controller="Payment" asp-action="Details" asp-route-id="@payment.Id">Details</a>
                            <a class=" btn btn-primary" asp-controller="Payment" asp-action="Edit" asp-route-id="@payment.Id">Edit</a>
                            <form class="" asp-action="Delete" asp-controller="Payment" asp-route-id="@payment.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="../wwwroot/js/site.js"></script>
</div>