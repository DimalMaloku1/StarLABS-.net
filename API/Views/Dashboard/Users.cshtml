@model IEnumerable<Application.DTOs.AccountDTOs.UserDto>;

@Html.Partial("_Navbar")
<div class="relative mx-auto overflow-x-auto">
    <div class="card w-2/3 mx-auto mt-12">


        <div class="card-body">
            <table class="datatable table table-bordered table-striped table-hover py-4">
                <thead class="table-dark ">
                <th> User Id </th>
                <th> First Name</th>
                <th> Last Name </th>
                <th> Registration Date</th>
                <th> Actions</th>
                </thead>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td> @user.Id </td>
                        <td> @user.UserName</td>
                        <td> @user.UserLastName</td>
                        <td> @user.RegistrationDate</td>
                        <td class="text-center ">
                            <a asp-action="UserDetails" asp-route-id="@user.Id" class=" btn btn-info">Details</a>
                            <a asp-action="UpdateUser" asp-route-id="@user.Id" class=" btn btn-primary">Edit</a>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" class="" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
       <div class="mt-4">
                   @await Html.PartialAsync("_UserRegistrationChart",ViewData["userchart"])
               </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="../wwwroot/js/site.js">
            
          </script>

</div>